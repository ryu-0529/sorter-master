{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "game_sessions": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$gameId": {
        ".read": "auth != null",
        ".write": "auth != null",
        "players": {
          "$userId": {
            ".read": "auth != null",
            ".write": "auth.uid === $userId || root.child('game_sessions').child($gameId).child('creatorId').val() === auth.uid"
          }
        }
      }
    },
    "custom_rooms": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$roomId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "matchmaking": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "online_users": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$userId": {
        ".read": "auth != null",
        ".write": "auth.uid === $userId"
      }
    }
  }
}
